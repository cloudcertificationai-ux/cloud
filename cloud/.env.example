# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-super-secret-key-here-min-32-chars

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/cloudcertification

# Main Website Integration
MAIN_WEBSITE_URL=http://localhost:3000
ADMIN_PANEL_URL=http://localhost:3001
NEXT_PUBLIC_MAIN_APP_URL=http://localhost:3000

# Security Configuration
IP_WHITELIST=127.0.0.1,::1,192.168.1.0/24
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SIGNING_KEY=your-jwt-signing-key-here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://cloudcertification.com,https://admin.cloudcertification.com

# Session Configuration
SESSION_MAX_AGE=86400
SESSION_UPDATE_AGE=3600

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=90
AUDIT_LOG_LEVEL=info

# Payment Gateway Configuration (if needed)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,video/mp4

# Cloudflare R2 Configuration (for media uploads)
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=cloudcertification-media
R2_PUBLIC_DOMAIN=https://media.yourdomain.com

# Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Environment
NODE_ENV=development